<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="185dp"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:layout_marginEnd="@dimen/margin_small">

    <ImageView
        android:id="@+id/img_cast"
        android:layout_width="match_parent"
        android:layout_height="278dp"
        android:background="@color/colorAccent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_cast_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_x_small"
        android:maxLines="1"
        android:text="Jason Statham"
        android:textColor="@color/white"
        android:textSize="@dimen/text_x_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_cast" />

    <TextView
        android:id="@+id/tv_cast_character"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TetikÃ§i"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_x_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cast_name" />

</androidx.constraintlayout.widget.ConstraintLayout>